#include <stdio.h>
#include <locale.h>


int v [5];
// Função para ler o vetor
void LeVetor (){
    int i;
    printf ("Digite 5 valores para o vetor: ");
    for (i=0; i<5; i++) {
        scanf ("%d", &v[i]);
    }
}
// Função para verificar o vetor
void ImprimiVetor(){
    int i;
    printf ("Valores do vetor: ");
    for (i=0; i<5; i++) {
        printf (" %d", v[i]);
    }



}

int main() {
    setlocale(LC_ALL, "Portuguese"); // Permite imprimir acentos e cedilha.

    int opcao;
    do {
        printf("*** MENU ***\n");
        printf("1 - Ler vetor\n");
        printf("2 - imprimir vetor\n");
        printf("3 - Sair\n");
        printf("Opção: ");
        scanf("%d", &opcao);

        printf("\n\n");

        switch (opcao) {
            case 1:
                LeVetor();
                break;
            case 2:
                ImprimiVetor();
                break;
            case 3:
                printf("Saindo...\n");
                break;
            default:
                printf("Opção inválida!\n");
                break;
        }

        printf("\n\n");
    } while (opcao != 3);

    return 0;
}

